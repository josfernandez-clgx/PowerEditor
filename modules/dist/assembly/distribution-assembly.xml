<?xml version="1.0"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>content</directory>
			<outputDirectory>/</outputDirectory>
			<filtered>false</filtered>
			<includes>
			</includes>
			<excludes>
				<exclude>**/CVS/*</exclude>
				<exclude>script/**/*</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>../common/src/main/xsd</directory>
			<outputDirectory>xsd</outputDirectory>
			<filtered>false</filtered>
			<excludes>
				<exclude>**/CVS/*</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>../server/src/main/xsd</directory>
			<outputDirectory>xsd</outputDirectory>
			<filtered>false</filtered>
			<excludes>
				<exclude>**/CVS/*</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>../server/src/main/wsdl</directory>
			<outputDirectory>wsdl</outputDirectory>
			<filtered>false</filtered>
			<excludes>
				<exclude>**/CVS/*</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>content/script</directory>
			<outputDirectory>tool</outputDirectory>
			<filtered>false</filtered>
			<lineEnding>dos</lineEnding>
			<includes>
				<include>*.bat</include>
			</includes>
			<excludes>
				<exclude>**/CVS/*</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>content/script</directory>
			<outputDirectory>tool</outputDirectory>
			<filtered>false</filtered>
			<fileMode>777</fileMode>
			<lineEnding>unix</lineEnding>
			<includes>
				<include>*.sh</include>
			</includes>
			<excludes>
				<exclude>**/CVS/*</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>content/script</directory>
			<outputDirectory>tool</outputDirectory>
			<filtered>false</filtered>
			<lineEnding>unix</lineEnding>
			<includes>
				<include>*.properties</include>
			</includes>
			<excludes>
				<exclude>**/CVS/*</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>../webserviceclient/src/main</directory>
			<outputDirectory>wsclient</outputDirectory>
			<filtered>false</filtered>
			<includes>
				<include>csharpsource/*.cs</include>
				<include>java/**/PEWSClient.java</include>
			</includes>
			<excludes>
				<exclude>**/CVS/*</exclude>
			</excludes>
		</fileSet>
	</fileSets>
	<files>
		<!-- WAR files -->
		<file>
			<source>../server/target/powereditor-${project.version}.war</source>
			<outputDirectory>webapps</outputDirectory>
			<destName>powereditor.war</destName>
		</file>
		<file>
			<source>../server/target/powereditor-${project.version}_websphere.war</source>
			<outputDirectory>webapps</outputDirectory>
			<destName>powereditor_websphere.war</destName>
		</file>
		<!-- Tools JAR files -->
		<file>
			<source>../pwd-tool/target/pe-pwd-tool-jar-with-dependencies.jar</source>
			<outputDirectory>tool</outputDirectory>
			<destName>PEPasswordTool.jar</destName>
		</file>
		<file>
			<source>../version-tool/target/pe-version-tool-${project.version}.jar</source>
			<outputDirectory>tool</outputDirectory>
			<destName>PEVersionTool.jar</destName>
		</file>
		<file>
			<source>../webserviceclient/target/pe-wsclient-${project.version}-jar-with-dependencies.jar</source>
			<outputDirectory>tool</outputDirectory>
			<destName>PEWSClient.jar</destName>
		</file>
	</files>
</assembly>
